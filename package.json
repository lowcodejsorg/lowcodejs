{
  "devDependencies": {
    "husky": "^9.1.7",
    "npm-run-all2": "^8.0.4"
  },
  "scripts": {
    "prepare": "husky",
    "test:unit:backend": "cd backend && npm run test:unit",
    "test:e2e:backend": "cd backend && npm run test:e2e",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && NODE_OPTIONS='--max-old-space-size=4096' npm run build",
    "build": "run-p build:*"
  }
}
