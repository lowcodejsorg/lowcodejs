{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2024",
    "baseUrl": "./",
    "paths": {
      "@application/*": ["./application/*"],
      "@bin/*": ["./bin/*"],
      "@config/*": ["./config/*"],
      "@database/*": ["./database/*"],
      "@start/*": ["./start/*"]
    }
  },
  "module": {
    "type": "es6"
  }
}
