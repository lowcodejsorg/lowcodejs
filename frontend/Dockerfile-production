FROM node:22-alpine AS base

# Build stage
FROM base AS builder
WORKDIR /app

# Copiar package files
COPY package.json package-lock.json ./
RUN npm install

# Copiar código e buildar
COPY . .
ENV NODE_OPTIONS="--max-old-space-size=4096"

# ARG permite passar URL no build (branches develop/demo/intranet)
# Default localhost:3000 será substituído em runtime pelo entrypoint (imagem oficial)
ARG VITE_API_BASE_URL=http://localhost:3000
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
RUN npm run build

# Production stage
FROM base AS runner
WORKDIR /app

# Instalar curl para healthcheck
RUN apk add --no-cache curl

# Criar usuário não-root
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nitro

# Copiar APENAS .output (já tem tudo!)
COPY --from=builder /app/.output ./.output

# Copiar entrypoint script
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh && chown nitro:nodejs /docker-entrypoint.sh

# Segurança: rodar como não-root
USER nitro

EXPOSE 3000
ENV PORT=3000

ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["node", ".output/server/index.mjs"]
